<Window x:Class="Task10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task10"
        xmlns:vm="clr-namespace:Task10.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="350">
    <Window.Resources>
        <local:BoolToColorConverter x:Key="BoolToBackgroundConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <StackPanel>
        <TextBlock Text="Форма входа" Margin="5,10,0,0" FontSize="24" FontWeight="Bold"/>
        <TextBlock Text="Логин:" Margin="5,5,0,5" FontSize="14"/>        
        <TextBlock Text="Пароль:" Margin="5,2,0,0" FontSize="14"/>
        <TextBox Text="{Binding Username}" Height="18" Width="250" Margin="0,-70,20,0" HorizontalAlignment="Right"/>
        <TextBox Text="{Binding Password}" Height="18" Width="250" Margin="0,-20,20,0" HorizontalAlignment="Right"/>
        <Button Width="80" Height="30" Margin="0,10,0,5" Content="Войти" Command="{Binding LoginCommand}"/>
        <TextBlock x:Name="Message" Text="{Binding StatusMessage}" Width="300" Height="30" 
                   FontSize="14" FontWeight="Bold" Background="{Binding IsSucces, Converter={StaticResource BoolToBackgroundConverter}}" Foreground="White" 
                   Margin="5,10,5,10" HorizontalAlignment="Center" TextAlignment="Center"/>
    </StackPanel>
</Window>
