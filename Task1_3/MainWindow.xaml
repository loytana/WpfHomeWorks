<Window x:Class="Task1_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1_3"
        mc:Ignorable="d"
        Title="Убегающая кнопка" Height="800" Width="800">
    <Grid>
        <Button x:Name="button"
            Content="Поймай меня!"
            FontSize="24"
            FontWeight="Bold"
            Foreground="White"
            Background="#FF67A900"
            Width="200"
            Height="50"
            Margin="0,0,0,0"
            Click="Clicker"
            />
    </Grid>
</Window>
