<Window x:Class="Task2.NewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        Title="О программе" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TextBlock1" Grid.Row="0"
                   FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,10,0,0"
                   Text="Простой текстовый редактор"/>
        <Image Source="Data/SuccessfulProgrammer.jpg" Grid.Row="1" Width="100" Height="100"/>
        <TextBlock x:Name="TextBlock2" Grid.Row="2"
           FontSize="14"
           HorizontalAlignment="Center" Margin="0,5,0,0"
           Text="Автор: Гокканен Александр Ильич"/>
        <TextBlock x:Name="TextBlock3" Grid.Row="3"
            FontSize="14"
            HorizontalAlignment="Center" Margin="-152,5,0,0"
            Text="Версия: 1.0"/>
        <TextBlock x:Name="TextBlock4" Grid.Row="4"
            FontSize="14"
            HorizontalAlignment="Center" Margin="-58,5,0,0"
            Text="Дата создания: 01.01.2025"/>
        <Button Content="Закрыть" Grid.Row="5" Width="100" Click="CloseNewWindow" Margin="5"/>
    </Grid>
</Window>
