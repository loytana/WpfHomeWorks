<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Task5"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <SolidColorBrush x:Key="PrimaryColor" Color="Blue" x:Shared="False"/>
    <SolidColorBrush x:Key="HoverColor" Color="Red"/>
    <SolidColorBrush x:Key="DisabledColor" Color="AliceBlue"/>
    <sys:Double x:Key="ControlHeight">30</sys:Double>
    <sys:Double x:Key="ControlWidth">120</sys:Double>
    <Style x:Key="BaseButtonStyle">
        <Setter Property="Button.Height" Value="{StaticResource ControlHeight}"/>
        <Setter Property="Button.Width" Value="{StaticResource ControlWidth}"/>
        <Setter Property="Button.Margin" Value="5"/>
        <Setter Property="Button.Background" Value="{DynamicResource PrimaryColor}"/>
        <Setter Property="Button.Foreground" Value="White"/>
    </Style>
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>
</ResourceDictionary>