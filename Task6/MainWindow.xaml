<Window x:Class="Task6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:BooleanToVisibilityConverter x:Key="VisibilityConverter"/>
    </Window.Resources>
    <StackPanel>
        <TextBox x:Name="txtBx" Text="Введите текст здесь" Margin="5"/>
        <CheckBox x:Name="chckBx" Content="Показать детали" Margin="5"/>
        <TextBlock Text="{Binding ElementName=txtBx, Path=Text.Length, StringFormat='Длина текста: {0}'}" Visibility="{Binding ElementName=chckBx, Path=IsChecked, Converter={StaticResource VisibilityConverter}}" Margin="5"/>
        <ProgressBar Value="{Binding Text.Length, ElementName=txtBx, Mode=OneWay}" Maximum="100" Height="15" Visibility ="{Binding ElementName=chckBx, Path=IsChecked, Converter={StaticResource VisibilityConverter}}" Margin="5"/>
    </StackPanel>
</Window>
