<Window x:Class="Task9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task9"
        mc:Ignorable="d"
        Title="ColorViewer" Height="450" Width="800">
    <Window.CommandBindings>
        <CommandBinding Command="local:CustomCommands.ChangeColor" 
                        Executed="ChangeColorExecuted" />
        <CommandBinding Command="ApplicationCommands.Undo" 
                        Executed="UndoExecuted" 
                        CanExecute="UndoCanExecute" />
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Command="local:CustomCommands.ChangeColor" Key="C" Modifiers="Ctrl" />
        <KeyBinding Command="ApplicationCommands.Undo" Key="Z" Modifiers="Ctrl" />
    </Window.InputBindings>
    <DockPanel x:Name="Dock">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Действия">
                <MenuItem Header="Изменить цвет" Command="local:CustomCommands.ChangeColor" InputGestureText="Ctrl+C"/>
                <MenuItem Header="Отменить" Command="ApplicationCommands.Undo" InputGestureText="Ctrl+Z" />
            </MenuItem>
        </Menu>        
        <StackPanel>
            <Button Margin ="0,150,0,30"  Content="Изменить цвет" Width="100" Height="25" Command="local:CustomCommands.ChangeColor"/>
            <Button Content="Отменить" Width="100" Height="25" Command="ApplicationCommands.Undo"/>
        </StackPanel>
    </DockPanel>    
</Window>
